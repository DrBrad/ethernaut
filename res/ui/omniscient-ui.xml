<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk+" version="3.24"/>

    <object class="GtkMenuBar" id="main_window_menu">
        <child>
            <object class="GtkMenuItem" id="file_menu_item">
                <property name="label">_File</property>
                <property name="use_underline">true</property>

                <child>
                    <object class="GtkMenu" id="file_menu">
                        <child>
                            <object class="GtkMenuItem" id="open_menu_item">
                                <property name="label">_Open</property>
                                <property name="use_underline">true</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkMenuItem" id="exit_menu_item">
                                <property name="label">_Exit</property>
                                <property name="use_underline">true</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>