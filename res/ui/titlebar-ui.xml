<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk+" version="3.24"/>

    <object class="GtkBox" id="titlebar">
        <property name="name">titlebar</property>
        <property name="visible">True</property>
        <property name="hexpand">True</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">30</property>
        <property name="height-request">32</property>

        <child>
            <object class="GtkBox">
                <property name="name">titlebar_menu</property>
                <property name="visible">True</property>
                <property name="hexpand">True</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkButton" id="menu_button">
                        <property name="visible">True</property>
                        <property name="width-request">24</property>
                        <property name="height-request">24</property>

                        <child>
                            <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                                <property name="icon-name">packet-capture-menu</property>
                                <property name="file">res/images/ic_menu.svg</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="GtkBox" id="titlebar_app_options">
                <property name="name">titlebar_app_options</property>
                <property name="visible">True</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkButton" id="start_button">
                        <property name="name">start_button</property>
                        <property name="visible">True</property>
                        <property name="width-request">24</property>
                        <property name="height-request">24</property>

                        <child>
                            <object class="GtkImage" id="start_icon">
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                                <property name="icon-name">packet-capture-start</property>
                                <property name="file">res/images/ic_start.svg</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkButton" id="stop_button">
                        <property name="name">stop_button</property>
                        <property name="visible">True</property>
                        <property name="width-request">24</property>
                        <property name="height-request">24</property>
                        <property name="visible">False</property>

                        <child>
                            <object class="GtkImage" id="stop_icon">
                                <property name="visible">True</property>
                                <property name="width-request">24</property>
                                <property name="height-request">24</property>
                                <property name="icon-name">packet-capture-stop</property>
                                <property name="file">res/images/ic_stop.svg</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>



        <child>
            <object class="GtkBox">
                <property name="name">titlebar_window_options</property>
                <property name="visible">True</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>

                <child>
                    <object class="GtkButton" id="minimize_button">
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>

                        <child>
                            <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="width-request">16</property>
                                <property name="height-request">16</property>
                                <property name="icon-name">minimize</property>
                                <property name="file">res/images/ic_minimize.svg</property>
                            </object>
                        </child>
                    </object>
                </child>


                <child>
                    <object class="GtkButton" id="maximize_button">
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>

                        <child>
                            <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="width-request">16</property>
                                <property name="height-request">16</property>
                                <property name="icon-name">maximize</property>
                                <property name="file">res/images/ic_maximize.svg</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkButton" id="close_button">
                        <property name="visible">True</property>
                        <property name="width-request">16</property>
                        <property name="height-request">16</property>

                        <child>
                            <object class="GtkImage">
                                <property name="visible">True</property>
                                <property name="width-request">16</property>
                                <property name="height-request">16</property>
                                <property name="icon-name">close</property>
                                <property name="file">res/images/ic_close.svg</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>